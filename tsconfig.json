	"compilerOptions": {
		"module": "Node16",
		"target": "ES6",
		"outDir": "out",
		"lib": [
			"ES6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "Node16", 
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
