{
  "name": "srs",
  "displayName": "SRS",
  "description": "Syntex repository services VS Code Extension ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:srs.generateCertificate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "srs-m365": {
        "description": "Microsoft 365 icon in command tree view",
        "default": {
          "fontPath": "./media/font/srs.woff",
          "fontCharacter": "\\E002"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "syntex-repository-services",
          "title": "Syntex repository services",
          "icon": "media/container.svg"
        }
      ]
    },
    "views": {
      "syntex-repository-services": [
        {
          "id": "srs-accounts",
          "name": "Accounts"
        },
        {
          "id": "srs-development",
          "name": "Development"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "srs.signOut",
          "when": "view == srs-accounts && viewItem == signedinM365",
          "group": "inline@1"
        }
      ]
    },
    "commands": [
      {
        "command": "srs.generateCertificate",
        "title": "Syntex repository services: Generate Certificate"
      },
      {
        "command": "srs.uploadCertificate",
        "title": "Syntex repository services: Upload Certificate"
      },
      {
        "command": "srs.login",
        "title": "Syntex repository services: Login to AAD"
      },
      {
        "command": "srs.createNewAadApplicationCommand",
        "title": "Syntex repository services: Create New AAD Application"
      },
      {
        "command": "srs.createNewContainerTypeCommand",
        "title": "Syntex repository services: Create New ContainerType"
      },
      {
        "command": "srs.registerNewContainerTypeCommand",
        "title": "Syntex repository services: Register New ContainerType"
      },
      {
        "command": "srs.callMSGraphCommand",
        "title": "Syntex repository services: Call MSGraph"
      },
      {
        "command": "srs.getSPToken",
        "title": "Syntex repository services: Get SP Token"
      },
      {
        "command": "srs.signOut",
        "title": "Syntex repository services: Sign out account",
        "icon": "$(sign-out)"
      },
      {
        "command": "srs.cloneRepo",
        "title": "Syntex repository services: Clone Git Repo"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jsrsasign": "^10.5.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/node-forge": "^1.3.4",
    "@types/uuid": "^9.0.3",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.0-dev.20230825"
  },
  "dependencies": {
    "@azure/msal-node": "^2.0.1",
    "@pnp/nodejs": "^3.17.0",
    "@pnp/queryable": "^3.17.0",
    "@pnp/sp": "^3.17.0",
    "@pnp/sp-admin": "^3.17.0",
    "axios": "^1.4.0",
    "jsrsasign": "^10.8.6",
    "jsrsasign-util": "^1.0.5",
    "msal-node": "^0.0.1-security",
    "node-forge": "^1.3.1",
    "path": "^0.12.7",
    "uuid": "^9.0.0"
  }
}
