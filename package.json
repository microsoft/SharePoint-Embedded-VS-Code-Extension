{
  "name": "spe",
  "displayName": "spe",
  "description": "SharePoint Embedded VS Code Extension ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:spe.generateCertificate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "spe-365": {
        "description": "Microsoft 365 icon in command tree view",
        "default": {
          "fontPath": "./media/font/spe.woff",
          "fontCharacter": "\\E002"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sharepoint-embedded",
          "title": "SharePoint Embedded",
          "icon": "media/container.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "spe-welcome",
        "contents": "Sign into your Microsoft 365 tenant with an adminstrator account to get started.\n [Sign into Microsoft 365](command:spe.login)",
        "when": "!spe:isAdminLoggedIn"
      },
      {
        "view": "spe-development",
        "contents": "Get started with a trial Container Type\n [Create Trial Container Type](command:spe.login)",
        "when": "spe:isAdminLoggedIn"
      }
    ],
    "views": {
      "sharepoint-embedded": [
        {
          "id": "spe-welcome",
          "name": "",
          "when": "!spe:isAdminLoggedIn"
        },
        {
          "id": "spe-accounts",
          "name": "Accounts",
          "when": "spe:isAdminLoggedIn"
        },
        {
          "id": "spe-development",
          "name": "Development",
          "when": "spe:isAdminLoggedIn"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "spe.signOut",
          "when": "view == spe-accounts && viewItem == signedinM365",
          "group": "inline@1"
        },
        {
          "command": "spe.createNewAadApp",
          "when": "view == spe-development && viewItem == aadAppList",
          "group": "inline@1"
        }
      ]
    },
    "commands": [
      {
        "command": "spe.generateCertificate",
        "title": "SharePoint Embedded: Generate Certificate"
      },
      {
        "command": "spe.uploadCertificate",
        "title": "SharePoint Embedded: Upload Certificate"
      },
      {
        "command": "spe.login",
        "title": "SharePoint Embedded: Login to AAD"
      },
      {
        "command": "spe.createNewAadApp",
        "title": "SharePoint Embedded: Create New AAD Application",
        "icon": "$(terminal-new)"
      },
      {
        "command": "spe.createNewContainerTypeCommand",
        "title": "SharePoint Embedded: Create New ContainerType"
      },
      {
        "command": "spe.registerNewContainerTypeCommand",
        "title": "SharePoint Embedded: Register New ContainerType"
      },
      {
        "command": "spe.callMSGraphCommand",
        "title": "SharePoint Embedded: Call MSGraph"
      },
      {
        "command": "spe.getCertPK",
        "title": "SharePoint Embedded: Get Cert PK"
      },
      {
        "command": "spe.signOut",
        "title": "SharePoint Embedded: Sign out account",
        "icon": "$(sign-out)"
      },
      {
        "command": "spe.cloneRepo",
        "title": "SharePoint Embedded: Clone Git Repo"
      },
      {
        "command": "spe.callSpeTosCommand",
        "title": "SharePoint Embedded: Accept SPE Terms of Service"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jsrsasign": "^10.5.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/node-forge": "^1.3.4",
    "@types/uuid": "^9.0.3",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.0-dev.20230825"
  },
  "dependencies": {
    "@azure/msal-node": "^2.0.1",
    "@pnp/nodejs": "^3.17.0",
    "@pnp/queryable": "^3.17.0",
    "@pnp/sp": "^3.17.0",
    "@pnp/sp-admin": "^3.17.0",
    "axios": "^1.4.0",
    "jsrsasign": "^10.8.6",
    "jsrsasign-util": "^1.0.5",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "msal-node": "^0.0.1-security",
    "node-forge": "^1.3.1",
    "path": "^0.12.7",
    "uuid": "^9.0.0"
  }
}
